<!DOCTYPE html>
@using RpgInfinity.Controllers
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/Logo.ico" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("RPG Infinity", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="link">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="link">@Html.ActionLink("Character List", "Index", "Character")</li>
                </ul>
                <ul class="nav navbar-nav LGSU">
                    @if (RpgInfinity.Controllers.HomeController._currentUser == null)
                    {
                        <li class="link">@Html.ActionLink("Login", "Login", "Home")</li>
                        <li class="link">@Html.ActionLink("Sign Up", "SignUp", "Home")</li>
                    }
                    @if (HomeController._currentUser != null)
                    {
                        <content>Hello, @HomeController._currentUser.Username</content>
                        <li class="link">@Html.ActionLink("Log Out", "Logout", "Home")</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <div class="powr-music-player" id="8def5660_1614303630"></div>
        <script src="https://www.powr.io/powr.js?platform=html%22%3E"></script>
        <footer>
            <p>&copy; @DateTime.Now.Year - RPG Infinity</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
